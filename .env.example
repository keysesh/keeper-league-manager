# ===========================================
# Keeper League Manager - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# Database (Required)
# PostgreSQL connection string from Railway or other provider
DATABASE_URL="postgresql://user:password@host:5432/database"

# NextAuth (Required)
# Your application URL (no trailing slash)
NEXTAUTH_URL="http://localhost:3000"
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-at-least-32-characters-long"

# Discord OAuth (Required)
# Get from https://discord.com/developers/applications
DISCORD_CLIENT_ID="your-discord-client-id"
DISCORD_CLIENT_SECRET="your-discord-client-secret"

# Admin API Key (Required for admin endpoints)
# Generate with: openssl rand -hex 32
ADMIN_API_KEY="your-admin-api-key"

# Upstash Redis (Optional - for rate limiting)
# Get from https://upstash.com
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# Feature Flags (Optional)
ENABLE_TRADE_ANALYZER="true"
ENABLE_HISTORICAL_ANALYTICS="true"

# Logging (Optional)
# Options: debug, info, warn, error
LOG_LEVEL="info"

# Sleeper API (Optional - only override if needed)
# SLEEPER_API_BASE_URL="https://api.sleeper.app/v1"

# PostHog Analytics (Optional)
# Get from https://posthog.com
NEXT_PUBLIC_POSTHOG_KEY=""
NEXT_PUBLIC_POSTHOG_HOST="https://us.i.posthog.com"
